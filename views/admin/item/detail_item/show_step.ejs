<div
  class="tab-pane fade"
  id="show-step"
  role="tabpanel"
  aria-labelledby="home-tab"
>
  <!-- DataTales Example -->
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form
            action="/admin/item/add/step"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                name="name"
                placeholder="Enter "
                required
              />
            </div>
            <div class="form-group">
              <label for="name">Step By Step</label>
              <input
                type="text"
                class="form-control"
                name="instructions"
                placeholder="Enter instructions"
                required
              />
            </div>
            <div class="form-group">
              <label for="name">Image</label>
              <input type="file" class="form-control" name="image" required />
            </div>
            <input type="hidden" value="<%= itemId %>" name="itemId" />
            <button type="submit" class="btn btn-primary">Add</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTableStep"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Step By step</th>
                  <th>Image</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for(let i = 0; i < step.length; i++){ %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= step[i].name %></td>
                  <td><%= step[i].instructions %></td>
                  <td>
                    <img
                      src="http://localhost:3008/<%= step[i].imageUrl %>"
                      alt="imageUrl"
                      width="70px"
                    />
                  </td>
                  <td>
                    <form
                      action="/admin/item/<%= itemId %>/step/<%= step[i].id %>?_method=DELETE"
                      method="POST"
                    >
                      <a
                        href="javascript:void();"
                        type="button"
                        class="btn btn-warning btn-circle btn-sm button-update"
                        data-id="<%= step[i].id %>"
                        data-name="<%= step[i].name %>"
                        data-instructions="<%= step[i].instructions %>"
                      >
                        <i class="fas fa-edit"></i
                      ></a>
                      <button
                        type="submit"
                        class="btn btn-danger btn-circle btn-sm"
                      >
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
