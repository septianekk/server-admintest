<script>
  $(document).ready(function () {
    $("#dataTableStep").DataTable();
  });
  CKEDITOR.replace("about");
  $("#dataTableStep").on("click", ".button-update", function () {
    let id = $(this).data("id");
    let name = $(this).data("name");
    let instructions = $(this).data("instructions");
    $("#edit-modal1").modal("show");
    $(".id").val(id);
    $(".name").val(name);
    $(".instructions").val(instructions);
  });

  $("#dataTable").on("click", ".button-update", function () {
    let id = $(this).data("id");
    let name = $(this).data("name");
    let qty = $(this).data("qty");
    $("#edit-modal").modal("show");
    $(".id").val(id);
    $(".name").val(name);
    $(".qty").val(qty);
  });
</script>
